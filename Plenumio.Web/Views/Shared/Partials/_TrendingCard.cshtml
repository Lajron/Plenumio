@model TrendingCardVM
<div class="card border-0 shadow-sm" style="font-size:0.9rem;">
    <!-- Header -->
    <div class="card-header border-0 py-2 px-3 text-uppercase fw-bold small">
        @Model.Title
    </div>
    <!-- Body: items -->
    <div class="card-body d-flex flex-column gap-1 p-1">
        @foreach (var item in Model.Items) {
            <div class="d-flex align-items-center px-2 py-1">
                @if (!string.IsNullOrEmpty(item.ImageUrl)) {
                    <!-- User with avatar -->
                    <div class="d-flex align-items-center gap-2">
                        <img src="@(item.ImageUrl?.Trim() ?? "https://picsum.photos/50")"
                             alt="@item.DisplayText"
                             class="rounded-circle border border-2" width="35" height="35" />
                        <a asp-controller="@item.Controller" asp-action="@item.Action" asp-all-route-data="@item.RouteValues" class="fw-medium text-decoration-none">
                            @item.DisplayText
                        </a>
                    </div>
                } else {
                    <!-- Tag without avatar -->
                    <a asp-controller="@item.Controller" asp-action="@item.Action" asp-all-route-data="@item.RouteValues" class="fw-medium text-decoration-none">
                        @item.DisplayText
                    </a>
                }
            </div>
        }
    </div>
    <div class="card-footer border-0 py-2 text-center small">
        <a asp-controller="@Model.Controller" asp-action="@Model.Action" asp-all-route-data="@Model.RouteValues" class="text-decoration-none">
            @Model.ViewMoreText
        </a>
    </div>
</div>