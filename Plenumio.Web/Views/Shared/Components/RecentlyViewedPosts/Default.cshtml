@model IEnumerable<PostDto>

<div class="card border-0 bg-dark-custom text-light shadow-sm" style="font-size:0.85rem;">
    <!-- Header -->
    <div class="card-header bg-dark-custom border-0 py-2 px-3 text-uppercase fw-bold small text-light">
        Recently Viewed Posts
    </div>

    <!-- Body: recent posts -->
    <div class="card-body bg-dark-custom border-0 d-flex flex-column gap-1 p-1">
        @foreach (var post in Model.Take(5)) {
            <a href="/posts/@post.Slug" class="recent-post d-flex align-items-center gap-2 px-2 py-1 text-decoration-none text-light rounded">

                <img src="@(post.Images.FirstOrDefault()?.Url ?? "https://picsum.photos/50")"
                     class="rounded border border-light"
                     style="width:40px; height:40px; object-fit:cover;" />

                <div class="text-truncate" style="max-width:180px;">
                    <strong>@post.Description</strong>
                </div>
            </a>
        }
    </div>

    <!-- Footer -->
    <div class="card-footer bg-dark-custom border-0 py-2 text-center small text-secondary">
        <a href="/posts/recently-viewed" class="text-decoration-none text-light">See more posts</a>
    </div>
</div>
