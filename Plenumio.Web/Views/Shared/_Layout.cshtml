<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plenumio.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Plenumio.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">
    <header class="navbar navbar-dark bg-dark py-0 sticky-top border-bottom border-2 border-secondary">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="me-3">
                <a class="navbar-brand me-3" href="#">PLENUMIO</a>
            </div>

            <div class="flex-grow-1 me-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search" />
                </div>
            </div>
            
            <div class="d-flex align-items-center action-icons">
                <a class="nav-link text-light d-flex align-items-center" href="#">
                    <i class="bi bi-plus-circle fs-4"></i>
                    <span class="d-flex align-items-center ms-2">Create</span>
                </a>
                <a class="nav-link text-light" href="#">
                    <i class="bi bi-chat-left-text fs-4"></i>
                </a>
                <a class="nav-link text-light" href="#">
                    <i class="bi bi-bell fs-4"></i>
                </a>
                <a class="nav-link text-light" href="#">
                    <i class="bi bi-person-circle fs-4"></i>
                 </a>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row d-flex flex-nowrap bg-dark text-light">
                @RenderBody()
            </div>
        </div>
    </main>
  

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
