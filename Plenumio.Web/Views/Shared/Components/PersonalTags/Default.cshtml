@model IEnumerable<TagVM>

<div class="card border-0 bg-body px-0 gap-1">

    <a class="d-flex align-items-center gap-2 text-decoration-none px-3 py-2 text-body hover-bg-light fw-medium"
       style="cursor: pointer;"
       data-bs-toggle="collapse"
       href="#collapseTags"
       role="button"
       aria-expanded="false"
       aria-controls="collapseTags">
        <i class="bi bi-tags fs-5"></i>
        <span>Following Tags</span>
       @if (Model.Any()){
            <i class="bi bi-chevron-down ms-auto small"></i>
        }
    </a>

    <div class="collapse" id="collapseTags">
        <div class="d-flex flex-column px-0" style="max-height: 300px; overflow-y:auto;">
            @foreach (var tag in Model) {
                <div class="d-flex justify-content-between align-items-center ps-3 py-1 border-bottom">
                    <a asp-controller="Tag" asp-action="Details" asp-route-tagName="@tag.Name"
                       class="text-decoration-none text-body fw-semibold">
                        #@tag.DisplayedName.ToLower()
                    </a>
                    <partial name="_TagFollowButton" model="@tag.FollowButton" />
                </div>
            }
        </div>
    </div>
</div>


