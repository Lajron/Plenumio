@using Plenumio.Web.Models.Tag
@model IEnumerable<TagSummaryVM>

@if (Model.Any()) {
    <div class="post-tags mb-2">
        @foreach (var tag in Model) {
            <a asp-controller="Tag" asp-action="Details" asp-route-tagName="@tag.Name" class="text-decoration-none text-reset">

                <span class="badge bg-secondary fs-6 me-2">@tag.DisplayedName</span>
            </a>
        }
    </div>
}
