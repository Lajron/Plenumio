@section Scripts {
    <script>
        $(document).ready(function() {
            const hash = window.location.hash; // e.g., "#comment-1234"
            if(hash) {
                const $el = $(hash); // jQuery finds element by id
                if($el.length) {
                    // Smooth scroll
                    $('html, body').animate({
                        scrollTop: $el.offset().top - 100 // optional offset
                    }, 500);

                    // Highlight briefly
                    $el.addClass('bg-warning-subtle');
                    setTimeout(() => {
                        $el.removeClass('bg-warning-subtle');
                    }, 3000);
                }
            }
        });
    </script>
}
