@model CreatePostViewModel

@{
    ViewData["Title"] = "Create Post";
}

<div class="col-8">
    <h2>Create Post</h2>

    <form asp-controller="Post" asp-action="CreatePost" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" class="form-control" rows="5" placeholder="What's on your mind?"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Privacy" class="form-label"></label>
            <select asp-for="Privacy" class="form-select" asp-items="Html.GetEnumSelectList<PrivacyType>()"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Tags" class="form-label">Tags (comma separated)</label>
            <input asp-for="Tags" class="form-control" value="@string.Join(' ', Model.Tags)" placeholder="Add tags separated by whitespace" />
        </div>

        <div class="mb-3">
            <label class="form-label">Images</label>
            <input type="file" name="images" class="form-control" multiple />
        </div>

        <button type="submit" class="btn btn-primary">Post</button>
        <a asp-action="CreateArticle" asp-controller="Post" class="btn btn-secondary ms-2">Create Article</a>
    </form>
</div>