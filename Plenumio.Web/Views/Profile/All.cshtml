@using Plenumio.Web.Models.Profile
@model PageVM<IEnumerable<UserSummaryVM>>

@{
    ViewData["Title"] = Model.Title;
}

<div class="col-8">
    <div class="row g-2">
        @foreach (var user in Model.Content) {
            <partial name="_UserPreview" model="user" />
        }
    </div>
</div>


<div class="col-4 d-flex flex-column gap-2">

    <vc:trending-tags-card current-user-id="@Model.CurrentUserId"></vc:trending-tags-card>

    <partial name="_RecentlyViewedPosts" />

    <partial name="_Footer" />

</div>