@model TagViewModel

<div class="col-4">
    <div class="card ratio ratio-1x1 border-secondary border-1 overflow-hidden">
        <a asp-controller="Feed" asp-action="Index" asp-route-scope="Global" asp-route-tag="@Model.Name"
           class="text-decoration-none text-dark stretched-link"></a>
        <div class="card-body d-flex flex-column justify-content-between align-items-center p-3">
            <!-- Text -->
            <span class="text-center fw-bold text-truncate fs-6 w-100 flex-grow-1 d-flex align-items-center justify-content-center">@Model.DisplayedName</span>

            <!-- Follow button -->
            <button type="button" class="btn btn-sm btn-outline-primary fw-semibold position-relative z-1 flex-shrink-0">
                Follow
            </button>
        </div>
    </div>
</div>
