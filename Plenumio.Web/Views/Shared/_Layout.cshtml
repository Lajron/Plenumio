<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Plenumio.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Plenumio.Web.styles.css" asp-append-version="true" />
</head>
<body data-bs-theme="light">
    <header class="sticky-top">
        <partial name="_NavbarPartial" />
    </header>
    <main>
        <div class="d-flex flex-nowrap">
            <div class="d-flex flex-column col-2 pt-4 px-2 border-end border-secondary border-2">
                <partial name="_FeedMenu" />
            </div>
            <div class="d-flex justify-content-center w-100">
                <div class="col-10 container-fluid container-md pt-4">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </main>
  

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
