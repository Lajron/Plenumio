@model CommentFeedViewModel

@if (Model.Comments.Any()) {
    <div id="commentsCarousel-@Model.PostId" class="carousel slide bg-light-subtle px-3 py-2 mb-2 rounded" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Comments.Count(); i++) {
                var comment = Model.Comments.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <partial name="_Comment" model="comment" />
                </div>
            }
        </div>
    </div>
} else {
    <div class="px-3 py-2 mb-2 rounded bg-light">
        <partial name="_CreateComment"
                 model="new CreateCommentViewModel { PostId = Model.PostId, ParentId = null }" />
    </div>
}
