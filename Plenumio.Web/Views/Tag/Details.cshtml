@model PageVM<TagPageModel>

@{
    ViewData["Title"] = Model.Title;
}

<div class="col-8 d-flex flex-column">
    <partial name ="_TagDetails" model="@Model.Content.Tag" />
    <vc:posts filters="Model.Content.PostFilters" current-user-id="Model.CurrentUserId"></vc:posts>
</div>

<div class="col-4 d-flex flex-column gap-2">

    <vc:trending-tags-card></vc:trending-tags-card>

    <vc:trending-users-card></vc:trending-users-card>

    <partial name="_RecentlyViewedPosts" />

    <partial name="_Footer" />

</div>